<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".ui.home.BottomSheetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/cca"
        android:layout_marginVertical="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="42dp"
            android:src="@drawable/baseline_savings_24"
            android:layout_height="42dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="20dp"
            android:text="Savings Account Credit"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginVertical="20dp"
        android:id="@+id/cch"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="42dp"
            android:src="@drawable/baseline_fact_check_24"
            android:layout_height="42dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_marginStart="20dp"
            android:text="Checking Account Credit"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginVertical="20dp"
        android:id="@+id/ach"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="42dp"
            android:src="@drawable/baseline_assured_workload_24"
            android:layout_height="42dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="20dp"
            android:text="Transfer to Other Banks (ACH)"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ppa"
        android:layout_marginVertical="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="42dp"
            android:src="@drawable/baseline_work_24"
            android:layout_height="42dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:text="Payroll"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginVertical="20dp"
        android:id="@+id/ppr"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="42dp"
            android:src="@drawable/baseline_attach_money_24"
            android:layout_height="42dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_marginStart="20dp"
            android:text="Suppliers Payments"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>